# Database Configuration
DATABASE_URL=sqlite:///./data/marketing.db

# Debug Mode
DEBUG=false

# Logging
LOG_LEVEL=INFO

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Host and Port
HOST=0.0.0.0
PORT=8000

# MCP Configuration
MCP_HOST=localhost
MCP_PORT=8080

# WebSocket Port
WS_PORT=9002

# Environment
ENVIRONMENT=development

# Workers
WORKERS=4

# Agent IDs
LEAD_TRIAGE_AGENT_ID=lead_triage_001
ENGAGEMENT_AGENT_PREFIX=engagement_
CAMPAIGN_OPT_AGENT_ID=campaign_opt_001

# Memory Settings
SHORT_TERM_MEMORY_TTL=3600
MEMORY_CONSOLIDATION_INTERVAL=300

# Neo4j (Semantic Memory)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Redis (Short-term Memory)
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-secret-key-here

# External Services
EMAIL_SERVICE_URL=
SMS_SERVICE_URL=

# WebSocket Settings
WS_MAX_MESSAGE_SIZE=1048576
WS_HEARTBEAT_INTERVAL=30
WS_TIMEOUT=60

# CORS Origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8000
